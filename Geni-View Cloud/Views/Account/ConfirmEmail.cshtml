@{
    ViewBag.Title = "Confirm your e-mail";
}

<div class="form-top">
    <div class="form-top-left">
        <h3>@ViewBag.Title</h3>
        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
    </div>
    <div class="form-top-right">
        <i class="fa fa-lock"></i>
    </div>
</div>
<div class="form-bottom">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="form-group">
                <h4 class="text-center-white">Thank you for confirming your email.</h4>
                <h5 class="text-center-white"><i>Please, <a href="@ViewBag.ResetPasswordLink"> click here </a> to set new password.</i></h5>
            </div>
        </div>
        <a href="@Url.Action("Login","Account")"> < Back to login</a>
    }
</div>