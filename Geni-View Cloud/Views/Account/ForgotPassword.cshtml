@model GeniView.Cloud.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Your Password?";
}

<div class="form-top">
    <div class="form-top-left">
        <h3>@ViewBag.Title</h3>
        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
    </div>
    <div class="form-top-right">
        <i class="fa fa-lock"></i>
    </div>
</div>
<div class="form-bottom">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <h4 class="text-center-white">
                To reset your password, enter the email address.
            </h4>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-username form-control", @placeholder = "example@sample.com" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn">Send</button>
        <a href="@Url.Action("Login","Account")"> < Back to login</a>
    }
</div>