@model GeniView.Data.Hardware.Monitoring.DeviceEvent
@{
    Layout = null;
    string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/') + "/";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Geni-View Cloud Device Notification</title>
    <style>
        .button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }
    </style>
</head>
<body>
        <table align="center" width="100%" height="100%" style="background-color:#f2f2f2; max-width:70%; text-align:center" cellpadding="0" cellspacing="0">
            <tbody style="width:100%; border:0; background-color:#63BFE4;">
                <tr style="height:50px;">
                    <td align="center" style="color:#fff; line-height:25px; font-family:'Segoe UI','Lucida Grande','Helvetica Neue','Arial',sans-serif; font-size:18px;">
                        Geni-View Cloud Device Notification
                    </td>
                </tr>
            </tbody>
        </table>
        <table align="center" width="100%" height="100%" style="border:1px solid #f2f2f2; max-width:70%; text-align:center" cellpadding="0" cellspacing="0">
            <tbody style="width:100%;  background-color:#fff;">
                <tr>
                    <td style="padding:20px 7% 30px" align="center">
                        <table cellpadding="0" cellspacing="0">
                            <tr style="height:50px;">
                                <td style="font-family:'Segoe UI','Lucida Grande','Helvetica Neue','Arial',sans-serif;font-size:16px;line-height:1.4em;color:#343535">
                                    <div style="margin:7px 0">
                                        <table align="center" style="font-family:'Segoe UI','Lucida Grande','Helvetica Neue','Arial',sans-serif;font-size:12px; font-weight:bold; color:#000; width:400px;">
                                            <tbody style="background-color:rgba(247, 247, 247, 0.62)">
                                                <tr style="background-color:#f19735; color:#fff">
                                                    <td colspan="2" style="text-align:center;">Device Event Details</td>
                                                </tr>
                                                <tr>
                                                    <td style="width:50%;">Serial Number</td>
                                                    <td>@Html.DisplayFor(model => model.DeviceSerialNumber)</td>
                                                </tr>
                                                <tr>
                                                    <td>Event Type</td>
                                                    <td>@Html.DisplayFor(model => model.EventType)</td>
                                                </tr>
                                                <tr>
                                                    <td>Description</td>
                                                    <td>@Html.DisplayFor(model => model.Description)</td>
                                                </tr>
                                                <tr>
                                                    <td>Source</td>
                                                    <td>@Html.DisplayFor(model => model.SourceText)</td>
                                                </tr>
                                                <tr>
                                                    <td>Date</td>
                                                    <td>@Html.DisplayFor(model => model.Timestamp)</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="font-family:'Segoe UI','Lucida Grande','Helvetica Neue','Arial',sans-serif;font-size:12px;line-height:1.4em; color:#343535">
                                    <div style="margin:7px 0">
                                        If you don’t want to receive notification emails from <a href="@baseUrl">Geni-View Cloud</a> do the following steps:
                                        <ul>
                                            <li>Go to Profie</li>
                                            <li>Uncheck Email Notifications checkbox</li>
                                            <li>Save changes</li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="font-family:'Segoe UI','Lucida Grande','Helvetica Neue','Arial',sans-serif;font-size:12px;line-height:1.4em; color:#343535">
                                    <div style="margin:7px 0">
                                        This is a notification-only email address that does not accept incoming email. <br>
                                        Please do not reply to this message. If you have any questions, contact our support team.
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
        <table align="center" width="100%" height="100%" style="background-color:#f2f2f2; max-width:70%; text-align:center" cellpadding="0" cellspacing="0">
            <tbody style="width:100%; border:0; background-color:#63BFE4;">
                <tr style="height:20px;">
                    <td align="center" style="text-align:right; color:#f2f2f2; line-height:15px; font-family:'Segoe UI','Lucida Grande','Helvetica Neue','Arial',sans-serif; font-size:9px;">
                        <p>Copyright &copy; @DateTime.UtcNow.Year Bytec Group. All Rights Reserved.</p>
                    </td>
                </tr>
            </tbody>
        </table>
</body>
</html>
